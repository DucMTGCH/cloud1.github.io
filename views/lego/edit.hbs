<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f9f9f9;
}

.container {
    width: 40%;
    margin: 50px auto;
    background-color: #fff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
}

h2 {
    text-align: center;
    color: #333;
}

form {
    display: flex;
    flex-direction: column;
}

label {
    margin-top: 15px;
    font-weight: bold;
    color: #555;
}

input,
textarea {
    margin-bottom: 20px;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

input[type="submit"] {
    background-color: #4caf50;
    color: #fff;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

input[type="submit"]:hover {
    background-color: #45a049;
}


</style>

<h1>Edit lego</h1>
   Lego model: <input type="text" name="model" id="" required value="{{ lego.model }}">
   <br><br>
   Lego image: <input type="url" name="image" id="" required value="{{ lego.image }}">
   <img src="{{ lego.image }}" alt="" width="100" height="100">
   <br><br>
   Lego color:
   {{#equal lego.color "Black"}}
   <input type="radio" name="color" value="Black" checked="true"> Black
   <input type="radio" name="color" value="White"> White
   <input type="radio" name="color" value="Yellow"> Yellow
   <input type="radio" name="color" value="Blue"> Blue
   {{/equal}}
   {{#equal lego.color "White"}}
   <input type="radio" name="color" value="Black"> Black
   <input type="radio" name="color" value="White" checked="true"> White
   <input type="radio" name="color" value="Yellow"> Yellow
   <input type="radio" name="color" value="Blue"> Blue
   {{/equal}}
   {{#equal lego.color "Yellow"}}
   <input type="radio" name="color" value="Black" > Black
   <input type="radio" name="color" value="White"> White
   <input type="radio" name="color" value="Yellow" checked="true"> Yellow
   <input type="radio" name="color" value="Blue"> Blue
   {{/equal}}
   {{#equal lego.color "Blue"}}
   <input type="radio" name="color" value="Black"> Black
   <input type="radio" name="color" value="White"> White
   <input type="radio" name="color" value="Yellow"> Yellow
   <input type="radio" name="color" value="Blue"  checked="true"> Blue
   {{/equal}}
   <br><br>
    Lego material:
   {{#equal lego.material "Ceramic"}}
   <input type="radio" name="material" value="Ceramic" checked="true"> Ceramic
   <input type="radio" name="material" value="Wood"> Wood
   <input type="radio" name="material" value="Glass"> Glass
   <input type="radio" name="material" value="Plastic"> Plastic
   {{/equal}}
   {{#equal lego.material "Wood"}}
   <input type="radio" name="material" value="Ceramic"> Ceramic
   <input type="radio" name="material" value="Wood" checked="true"> Wood
   <input type="radio" name="material" value="Glass"> Glass
   <input type="radio" name="material" value="Plastic"> Plastic
   {{/equal}}
   {{#equal lego.material "Glass"}}
   <input type="radio" name="material" value="Ceramic" > Ceramic
   <input type="radio" name="material" value="Wood"> Wood
   <input type="radio" name="material" value="Glass" checked="true"> Glass
   <input type="radio" name="material" value="Plastic"> Plastic
   {{/equal}}
   {{#equal lego.material "Plastic"}}
   <input type="radio" name="material" value="Ceramic"> Ceramic
   <input type="radio" name="material" value="Wood"> Wood
   <input type="radio" name="material" value="Glass"> Glass
   <input type="radio" name="material" value="Plastic"  checked="true"> Plastic
   {{/equal}}
   <br><br>
   <input type="submit" value="Edit">
</form>