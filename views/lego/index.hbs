<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f9f9f9;
}

.container {
    width: 40%;
    margin: 50px auto;
    background-color: #fff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
}

h2 {
    text-align: center;
    color: #333;
}

form {
    display: flex;
    flex-direction: column;
}

label {
    margin-top: 15px;
    font-weight: bold;
    color: #555;
}

input,
textarea {
    margin-bottom: 20px;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

input[type="submit"] {
    background-color: #4caf50;
    color: #fff;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

input[type="submit"]:hover {
    background-color: #45a049;
}


</style>

<a class="btn btn-info" href="/lego/add">Add new lego</a>
<a class="btn btn-primary" href="/lego/sort/asc">Sort ASC</a>
<a class="btn btn-secondary" href="/lego/sort/desc">Sort DESC</a>
<br><br>
<form class="col-md-4" action="/lego/search" method="post">
   <input class="form-control" type="search" name="keyword" id="" required placeholder="Search by lego model">
</form>
<br><br>
<table class="table table-primary">
   <tr>
      <th>Lego model</th>
      <th>Lego color</th>
      <th>Lego Material</Th>
      <th>Lego brand</th>
      <th>Lego image</Th>
      <th colspan="2">Menu</th>
   </tr>
   {{#each legos }}
   <tr>
      <td>{{ model }}</td>
      <td>{{ color }}</td>
      <td>{{ material }}</td>
      <td>{{ brand.name }}</td>
      <td>
         <img src="{{ image }}" alt="" width="100" height="120">
      </td>
      <td>
         <a class="btn btn-warning" href="/lego/edit/{{ _id }}">Edit</a>
      </td>
      <td>
         <a class="btn btn-danger" href="/lego/delete/{{ _id }}" onclick="return confirm('Are you sure to delete this lego ?');">Delete</a>
      </td>
   </tr>
   {{/each}}
</table>